{
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "ignoreChanges": ["ignored-file", "*.md"],
            "message": "chore(release): publish"
        },
        "bootstrap": {
            "ignore": "component-*",
            "npmClientArgs": ["--no-package-lock"]
        }
    },
    "packages": ["packages/*"],
    "version": "independent"
}
